{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.test.ts"
    ],
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "ESNEXT",
        "module": "commonjs",
        "declaration": true,
        "removeComments": false,
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
