{
    "name": "@wont/utils",
    "version": "0.0.1-alpha.0",
    "description": "@wont/utils is javascript library, written with typescript. supporting browser and node",
    "main": "lib/umd/index.js",
    "module": "lib/es/index.js",
    "browser": "lib/umd/index.js",
    "types": "lib/umd/index.d.ts",
    "keywords": [
        "@wont",
        "utils",
        "@wont/utils"
    ],
    "author": {
        "name": "liukun",
        "email": "919590347@qq.com"
    },
    "files": [
        "lib"
    ],
    "license": "MIT",
    "scripts": {
        "fetchtag": "git tag | xargs -I {} git tag -d {} && git fetch --tags",
        "patch:demo": "npm run release -- --release-as patch --dry-run",
        "patch": "npm run fetchtag && npm run release -- --release-as patch",
        "minor": "npm run fetchtag && npm run release -- --release-as minor",
        "major": "npm run fetchtag && npm run release -- --release-as major",
        "alpha": "npm run fetchtag && npm run release -- --prerelease alpha && npm run push",
        "beta": "npm run fetchtag && npm run release -- --prerelease beta && npm run push",
        "rc": "npm run fetchtag && npm run release -- --prerelease rc && npm run push",
        "release": "standard-version",
        "push": "git push && git push --follow-tags origin master",
        "eslint": "eslint --ext .ts .",
        "eslint:fix": "eslint --ext .ts . --fix",
        "prettier": "prettier --write .",
        "create": "hygen module with-prompt",
        "changelog": "conventional-changelog -p angular -i docs/common/CHANGELOG.md -s -r 0",
        "commit": "git-cz",
        "docs": "ts-node scripts/doc.ts",
        "build": "ts-node scripts/build.ts",
        "build:docs": "npm run changelog && npm run docs && npm run vuepress:build",
        "vuepress:dev": "npm run changelog && npm run docs && vuepress dev docs",
        "vuepress:build": "vuepress build docs",
        "coverage": "jest --coverage --verbose -u",
        "test:fix": "jest --clearCache",
        "test:n": "jest --no-cache",
        "test": "jest"
    },
    "homepage": "wont-org.github.io/utils/",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wont-org/utils"
    },
    "bugs": {
        "url": "https://github.com/wont-org/utils/issues"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix"
        ],
        "*.(js|ts)": [
            "prettier --write"
        ]
    },
    "standard-version": {
        "skip": {
            "changelog": true
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.10.5",
        "@babel/preset-env": "^7.10.4",
        "@babel/preset-typescript": "^7.10.4",
        "@commitlint/cli": "^9.1.1",
        "@commitlint/config-conventional": "^9.1.1",
        "@rollup/plugin-babel": "^5.1.0",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^8.4.0",
        "@types/jest": "^26.0.7",
        "@typescript-eslint/eslint-plugin": "^3.7.1",
        "@typescript-eslint/parser": "^3.7.1",
        "chalk": "^4.1.0",
        "cli-color": "^2.0.0",
        "commitizen": "^4.1.2",
        "consola": "^2.14.0",
        "conventional-changelog-cli": "^2.0.34",
        "dekko": "^0.2.1",
        "eslint": "^7.5.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jest": "^23.19.0",
        "eslint-plugin-prettier": "^3.1.4",
        "glob": "^7.1.6",
        "husky": "^4.2.5",
        "hygen": "^6.0.4",
        "jest": "^26.1.0",
        "jsdoc-babel": "^0.5.0",
        "jsdoc-to-markdown": "^6.0.1",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "rollup": "^2.22.2",
        "rollup-plugin-filesize": "^9.0.2",
        "rollup-plugin-terser": "^6.1.0",
        "rollup-plugin-typescript2": "^0.27.1",
        "standard-version": "^8.0.2",
        "ts-jest": "^26.1.3",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7",
        "vuepress": "^1.5.2"
    }
}
